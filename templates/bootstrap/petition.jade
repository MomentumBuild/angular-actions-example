.container
	#petition
		header
			h1 Petition Demo Title
		article
			p Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
			hr
			actions-feed(campaign-id="#{camp}" action-id="#{action}" server="#{host}"  action="petition")
				.actionItem(ng-repeat="a in Feed.actions | orderBy:'-createdAt'")
					p <b>{{ a.first_name }} said</b> {{ a.message}}
						small.clearfix at {{ a.createdAt | date : 'medium' }}

			//- example-feed(campaign-id="#{camp}" action-id="#{action}" server="#{host}"  action="petition")


		aside
			actions-form(campaign-id="#{camp}" action-id="#{action}" server="#{host}"  action="petition") 
				h4.text-center Enter your details to sign the petition now!
				hr
				form#actionForm(ng-submit="Form.create()")
					.form-group
						.row
							.col-sm-6
								input.form-control(type="text" ng-model="Form.newAction.first_name" ng-required="true" placeholder="First Name")
							.col-sm-6
								input.form-control(type="text" ng-model="Form.newAction.last_name" ng-required="true" placeholder="Last Name")
					.form-group
						input.form-control(type="email" ng-model="Form.newAction.email" ng-required="true" placeholder="Email")
					.form-group
						input.form-control(type="number" ng-model="Form.newAction.postcode" ng-required="true" placeholder="Postcode")
					.form-group
						textarea.form-control(ng-model="Form.newAction.message" ng-required="true" placeholder="Leave them a message!")
					input(type="hidden" ng-model="Form.newAction.voted" ng-value="true")
					button.btn.btn-success.btn-block.btn-lg Vote Yes!
			//- example-form(campaign-id="#{camp}" action-id="#{action}" server="#{host}"  action="petition") 
